
<h2 class="text-center mt-2 mb-5">Create a new wedding</h2>

<div class="row justify-content-center">

  <%= form_for(@wedding, html: { class: 'col-12' }) do |f| %>

    <%= hidden_field_tag :selected_ids %>

    <h3>Choose bride & groom</h3>

    <div id="weddings-new-invitees-wrapper">
      <%= javascript_pack_tag 'weddings' %>
    </div>

    <div id="form-group">
      <%= f.label "Currency" %>
      <%= f.text_field :currency, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :total_budget %>
      <%= f.number_field :total_budget, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Create Wedding", class: 'btn btn-primary mt-4' %>
    </div>
  <% end %>
</div>
